# EquiSense AI Configuration Template
# Copy this to .env and fill in your actual values

# ========================================
# CORE API KEYS (Required)
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# INDIAN MARKET DATA SOURCES (Optional)
# ========================================
BSE_API_KEY=your_bse_api_key
NSE_API_KEY=your_nse_api_key
MONEYCONTROL_API_KEY=your_moneycontrol_key

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=sqlite+aiosqlite:///./app.db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========================================
# EMAIL & NOTIFICATIONS (Optional)
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@equisense.ai
SMTP_FROM_NAME=EquiSense AI

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET_KEY=your_very_long_random_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing settings
BCRYPT_ROUNDS=12

# ========================================
# API RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ========================================
# LANGFUSE OBSERVABILITY (Optional)
# ========================================
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_ENABLED=true

# ========================================
# REAL-TIME DATA PROVIDERS (Optional)
# ========================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_api_key
IEX_CLOUD_API_KEY=your_iex_cloud_key
FINNHUB_API_KEY=your_finnhub_key

# ========================================
# NEWS & SENTIMENT DATA
# ========================================
NEWS_API_KEY=your_newsapi_key
REUTERS_API_KEY=your_reuters_key

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ========================================
# PERFORMANCE & CACHING
# ========================================
CACHE_TTL_SECONDS=300
ENABLE_QUERY_CACHE=true
ENABLE_RESPONSE_COMPRESSION=true

# ========================================
# MARKET DATA SETTINGS
# ========================================
DEFAULT_MARKET=IN
DEFAULT_CURRENCY=INR
RISK_FREE_RATE=0.07
MARKET_RISK_PREMIUM=0.08

# ========================================
# ANALYSIS SETTINGS
# ========================================
DCF_FORECAST_YEARS=5
DCF_TERMINAL_GROWTH_RATE=0.03
MARGIN_OF_SAFETY=0.25
MIN_LIQUIDITY_THRESHOLD=100000

# ========================================
# WEBSOCKET SETTINGS (for real-time features)
# ========================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_QUEUE_SIZE=100

# ========================================
# PDF REPORT GENERATION
# ========================================
REPORT_OUTPUT_DIR=./reports
REPORT_LOGO_PATH=./assets/logo.png
REPORT_TEMPLATE=default

# ========================================
# MONITORING & ALERTING
# ========================================
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ========================================
# DEVELOPMENT & TESTING
# ========================================
PYTEST_CACHE_DIR=.pytest_cache
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:
MOCK_EXTERNAL_APIS=false

